<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoesMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShoesMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body style ="white-space: nowrap;">
     <header style="position:fixed; width: 100%; z-index: 10;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TuShoes</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ProductsPage">Các sản phẩm</a>
                        </li>
                        @if (ViewBag.UserRole == "Seller")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Seller/Create">Thêm sản phẩm</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Seller/Orders">Danh sách đơn hàng</a>
                            </li>
                        }
                    </ul>
                    <div class="input-group" style="">
                        <form style="margin: auto;" class="form-outline" method="get" asp-controller="Home" asp-action="ProductsPage">
                            <input style="display: inline;" name="query" type="search" placeholder="Tìm kiếm sản phẩm">
                            <button type ="submit" style="display: inline;">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    <ul class="navbar-nav flex-grow-0">
                        <li class="cart-icon nav-item" style="padding: 0 4px; z-index: 1">
                            @if (ViewBag.UserID == "" || ViewBag.UserID == null)
                            {
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fa-solid fa-cart-shopping" style="font-size: 20px"></i>
                                    </a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Cart">
                                    <i class="fa-solid fa-cart-shopping" style="font-size: 20px"></i>
                                </a>
                            }
                        </li>
                    </ul>
                </div>
                <div style="z-index:1">
                    <partial name="_LoginPartial" />
                </div>
            </div>   
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>

        .cart-icon:hover .no-cart {
            display: block;
        }

        .no-cart {
            position: absolute;
            right: 30px;
            top: calc(-5% + 60px);
            background-color: #f5f5f5;
            display: none;
        }

        #footer {
            margin-top: 16px;
            display: flex;
        }

        .footer_list {
            list-style: none;
        }

        .footer_list > li {
            cursor: pointer;
        }

    </style>
    <footer class="border-top ">
        <div class="container">
            <div class="row">
                <div id="footer">
                    <div class="col-sm-3 mx-1">
                        <ul class="footer_list">
                            <li style="font-weight:700">Chăm sóc khách hàng</li>
                            <li>Trung tâm hỗ trợ</li>
                            <li>Shop Mail</li>
                            <li>Hướng dẫn mua hàng</li>
                        </ul>
                    </div>
                    <div class="col-sm-3 mx-1">
                        <ul class="footer_list">
                            <li style="font-weight:700">Giới thiệu</li>
                            <li>Giới thiệu</li>
                            <li>Tuyển dụng</li>
                            <li>Điều khoản</li>
                        </ul>
                    </div>
                    <div class="col-sm-3 mx-1">
                        <ul class="footer_list">
                            <li style="font-weight:700">Danh mục</li>
                            <li>Giày</li>
                            <li>Quần áo</li>
                            <li>Các sản phẩm khác</li>
                        </ul>
                    </div>
                    <div class="col-sm-3 mx-1">
                        <ul class="footer_list">
                            <li style="font-weight:700">Theo dõi</li>
                            <li><i class="fa-brands fa-facebook"></i> Facebook</li>
                            <li><i class="fa-brands fa-instagram"></i> Instagram</li>
                            <li><i class="fa-brands fa-linkedin"></i> Linkedin</li>
                        </ul>
                    </div>
                </div>
                <p style="text-align:center">© 2023 - Bản quyền thuộc về ShoesMVC</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
